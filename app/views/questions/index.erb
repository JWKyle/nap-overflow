

<div class="questions-container">
<% @questions.each do |question| %>
  <div class="upvote">
  <form class="upvote_form" method="post" action='/questions/<%= question.id %>/vote' class="inline upvote-button">
      <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button"></button>
    </form>
  </div>

    <h2><a href="/questions/<%= question.id %>"><%= question.title %></a></h2>
    <p><%= question.explanation %></p>
    <%= erb :'questions/_question_upvote', locals: {question: question} %>

  <div class="downvote">
    <form method="post" action='/questions/<%= question.id %>/vote' class="inline">
      <button type="submit" name="submit_param" value="submit_value" class="fa fa-sort-desc vote-button downvote-button"></button>
    </form>
  </div>
</div>
<br>
<% end %>

<h2><a href="/questions/new">Ask a question...</a></h2>
